<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Edit Post</h1>
            <form class="form-group row" action="/updatePost" method="POST">
                <input type="hidden" name="POST_ID" value="{{post._id}}">
                <div class="form-group col-md-8 mb-2">
                    <label class="sr-only">Title</label>
                    <input type="text" class="form-control" placeholder="Post Title" value="{{post.Title}}" name="title" required>
                </div>
                <div class="form-group col-md-8 mb-2">
                    <label class="sr-only">Content</label>
                    <textarea type="text" class="form-control" cols="75" rows="10" required placeholder="Post Content" name="content">{{post.Content}}</textarea>
                </div>
                <div class="form-group col-md-8 mb-2">
                    <label class="sr-only">Quote</label>
                    <input type="text" class="form-control" placeholder="Post Quote" required name="quote" value="{{post.Quote}}">
                </div>
                <div class="form-group col-md-8 mb-2">
                    <label class="sr-only">Image</label>
                    <input type="text" class="form-control" placeholder="Image Url" required name="image" value="{{post.Image}}">
                </div>
                <div class="col-md-8">
                    <button type="submit" class="btn btn-primary mb-2">Update Post</button>
                </div>
            </form>
        </div>
    </div>
</div>